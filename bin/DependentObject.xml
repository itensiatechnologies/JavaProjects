<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="ans1" class="com.spring.dependentobject.Answer">
	<constructor-arg value="1"></constructor-arg>
    <constructor-arg value="Java is a programming language"></constructor-arg>  
    <constructor-arg value="John"></constructor-arg> 
</bean>   
<bean id="ans2" class="com.spring.dependentobject.Answer">
	<constructor-arg value="1"></constructor-arg>
    <constructor-arg value="Java is Platform"></constructor-arg>  
    <constructor-arg value="Rock"></constructor-arg> 
</bean>   
<bean id="ans3" class="com.spring.dependentobject.Question">
	<constructor-arg value="111"></constructor-arg>  
	<constructor-arg value="What is java?"></constructor-arg>  

	<constructor-arg>
		<list>
			<ref bean="ans1"/>
			<ref bean="ans2"/>
		</list>
	</constructor-arg>
</bean>

</beans> 